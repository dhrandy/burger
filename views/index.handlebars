    <div class="col-sm">
<h4>Burgers &nbsp;&nbsp; to &nbsp;&nbsp; devoured</h4>

<ul class = "notTitle">
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devour=false}}
    {{/unless}}
  {{/each}}
</ul>
</div>

<div class="col-sm">
<h4>Burgers &nbsp;&nbsp; Devoured</h4>

<ul class = "notTitle">
  {{#each burgers}}
    {{#if devoured}}
    <li>
      {{this.burger_name}}
      </li>
    {{/if}}
  {{/each}}
</ul>
</div>
  </div>
